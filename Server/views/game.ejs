<!doctype html>
<html>
<head>
    <title>Node Authentication</title>

    <script type="text/javascript" src="Client/js/libraries/phaser.js"></script>    
	<script type="text/javascript" src="Client/js/Utils.js"></script>
	<script type="text/javascript" src="Client/js/Player.js"></script>
    <script type="text/javascript" src="Client/js/Enemy.js"></script>
	<script type="text/javascript" src="Client/js/Bomb.js"></script>
    <script type="text/javascript" src="Client/js/Door.js"></script>
	<script type="text/javascript" src="Client/js/Explosion.js"></script>
	<script type="text/javascript" src="Client/js/states/Boot.js"></script>
	<script type="text/javascript" src="Client/js/states/Preload.js"></script>
	<script type="text/javascript" src="Client/js/states/IntroMenu.js"></script>
    <script type="text/javascript" src="Client/js/states/MultiplayerMenu.js"></script>
    <script type="text/javascript" src="Client/js/states/SinglePlayerGame.js"></script>
    <script type="text/javascript" src="Client/js/states/Lobby.js"></script>
    <script type="text/javascript" src="Client/js/states/MultiplayerGame.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>

</head>
<body>
<div>

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.username) { %>
                    <p>
                        <strong>id</strong>: <%= user.id %><br>
                        <strong>username</strong>: <%= user.username %><br>
                        <strong>password</strong>: <%= user.password %>
                        <strong>high score</strong>: <%= user.score %>
                    </p>
                <% } else { %>
                    USERNAME NOT FOUND, THIS SHOULD NOT BE HAPPENING
                <% } %>

            </div>
        </div>

        <meta charset="UTF-8">
        <title>Chatroom</title>
        <link rel="stylesheet" href="style.css">

        <div class="col-sm-6">

            <div class="chatArea">
                <ul class="messages"></ul>
            </div>
            <input class="inputMessage" placeholder="Type here..."/>
            <li class="login page">
                <div class="form">
                    <h6 class="title">What's your nickname?</h6>
                    <input class="usernameInput" type="text" maxlength="14" />
                </div>
            </li>
        </div>

	</div>

</div>

    <div id="game_div"></div>
    <script src="Client/js/main.js"></script>
    <script src="Client/js/socket_logic.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/main.js"></script>

</body>
</html>
